<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.appchef.expense_tracker_app">

    <uses-permission android:name="android.permission.READ_SMS"/>

    <application
        android:name=".application.ExpenseTrackerApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.Expense_tracker_app">
        <activity android:name=".view.activities.onboarding.OnBoardingActivity" />
        <activity android:name=".view.activities.SplashScreen"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activities.MainActivity" />
    </application>

</manifest>