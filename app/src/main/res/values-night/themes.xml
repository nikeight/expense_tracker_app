<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Expense_tracker_app" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!--status bar color-->
        <item name="colorPrimaryDark">@color/primaryBackgroundColor</item>
        <item name="android:windowLightStatusBar">false</item>
        <!--navigation bar color-->
        <item name="android:navigationBarColor" tools:targetApi="o_mr1">
            @color/primaryBackgroundColor
        </item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">false</item>

        <item name="android:windowBackground">@color/primaryBackgroundColor</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryBackgroundColor</item>/
        <item name="colorPrimaryVariant">@color/primaryBackgroundColor</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryBackgroundColor</item>
        <item name="colorSecondaryVariant">@color/primaryBackgroundColor</item>
        <item name="colorOnSecondary">@color/colorOnPrimary</item>

        <item name="android:textColor">@color/colorOnPrimary</item>
        <item name="fontFamily">@font/work_sans_medium</item>

        <item name="colorAccent">@color/colorOnPrimary</item>
    </style>
</resources>